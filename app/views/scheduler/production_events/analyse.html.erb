
<div class="modal-header">
  <h5 class="modal-title" id="childModalLabel">
    <%= t('.ShowEvent') %>
  </h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body">
  <%= render partial: "shared/error_list", locals: { errors: @production_event.errors } %>

  <fieldset disabled>
    <div class="row mat-form-row">
      <div class="mat-form-field col-md-4">
        <label for="production_event-code" class="mat-form-field-label">
          <%= t('production_events.show.Code') %>
        </label>
        <input id="production_event-code" class="mat-input-element" readonly
          value="<%= @production_event.task.code %>" />
      </div>
    </div>
    <div class="row mat-form-row">
      <div class="mat-form-field col-md-4">
        <label for="production_event-execution-sequence" class="mat-form-field-label">
          <%= t('production_events.show.ExecutionSequence') %>
        </label>
        <input id="production_event-execution-sequence" class="mat-input-element" readonly
          value="<%= @production_event.execution_sequence %>" />
      </div>
    </div>
  </fieldset>

  <div class="tabbable">

    <ul class="nav nav-tabs">
      <li class="active"><a href="#implementation" data-toggle="tab"><%= t('Implementation') %></a></li>
      <li><a href="#code-version" data-toggle="tab"><%= t('CodeVersion') %></a></li>
    </ul>

    <div class="tab-content">

      <div class="tab-pane active" id="implementation">
        <div class="row mat-form-row">
          <div class="mat-form-field col-md-4">
            <%# Next activity in case of failure or success %>
            <label for="production_event-next-success" class="mat-form-field-label">
              <%= t('production_events.show.NextSuccess') %>
            </label>
            <input id="production_event-next-success" class="mat-input-element" readonly
              value="<%# @production_event.success_next&.code %>" />
          </div>
          <div class="mat-form-field col-md-4">
            <label for="production_event-next-failure" class="mat-form-field-label">
              <%= t('production_events.show.NextFailure') %>
            </label>
            <input id="production_event-next-failure" class="mat-input-element" readonly
              value="<%# @production_event.failure_next&.code %>" />
          </div>
        </div>

        <hr/>
          <div class="row mat-form-row">
            <div class="mat-form-field col-md-12">
              <label for="task-statement" class="mat-form-field-label">
                <%= t('tasks.show.Statement') %>
              </label>
              <textarea id="task-statement" class="mat-input-element mat-textarea-md" readonly>
                <%= @production_event.statement %>
              </textarea>
            </div>
          </div>
          <div class="row mat-form-row">
            <div class="mat-form-field col-md-6">
              <label for="task-return_value" class="mat-form-field-label">
                <%= t('tasks.show.ReturnValue') %>
              </label>
              <input id="task-return_value" class="mat-input-element" readonly
                value="<%= @production_event.return_value %>" />
            </div>
          </div>

          <div class="modal-footer">
          </div>

      </div>

      <div class="tab-pane" id="code-version">
        <div class="row mat-form-row">
          <div class="mat-form-field col-md-4">
            <label for="production_event-git-hash" class="mat-form-field-label">
              <%= t('production_events.show.GitHash') %>
            </label>
            <input id="production_event-git-hash" class="mat-input-element" readonly
              value="<%= @production_event.git_hash %>" />
          </div>
        </div>
        <div class="row mat-form-row">
          <div class="mat-form-field col-md-4">
            <label for="production_event-git-response" class="mat-form-field-label">
              <%= t('production_events.show.GitResponse') %>
            </label>
            <textarea id="production_event-git-response" class="mat-input-element mat-textarea-md" readonly>
              <%= @production_event.git_response %>
            </textarea>
          </div>
        </div>
      </div>

    </div>

  </div>
</div>
