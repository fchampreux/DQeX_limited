<% provide(:page_class, 'page-view-details') %>

<%= form_for [@business_area, @business_flow], html: {id: "edit_form"} do |f| %>

  <%= render partial: "shared/error_list", locals: { errors: @business_flow.errors } %>

  <div class="row mat-form-row">
    <div class="col-md-6">
      <%= render partial: "shared/object_definition_form", locals: {this_object: @business_flow, f: f} %>
    </div>

    <div class="col-md-6">
      <%= render partial: "shared/object_responsibilities_form", locals: {this_object: @business_flow, f: f} %>

      <div class="row mat-form-row">
        <div class="mat-form-field col-md-6">
          <%= f.label :active_from, t('ActiveFrom'), class: "mat-form-field-label" %>
          <%= f.date_field :active_from, class: "mat-input-element" %>
        </div>
        <div class="mat-form-field col-md-6">
          <%= f.label :active_to, t('ActiveTo'), class: "mat-form-field-label" %>
          <%= f.date_field :active_to, class: "mat-input-element" %>
        </div>
      </div>
      <div class="row mat-form-row">
        <div class="mat-form-field col-md-12">
          <%= f.label :legal_basis, t('legal_basis'), class: "mat-form-field-label" %>
          <%= f.text_area :legal_basis, class: "mat-input-element mat-textarea-md" %>
        </div>
      </div>
      <div class="row mat-form-row">
        <div class="mat-form-field col-md-6">
          <%= f.label :participants, t('Participants'), class: "mat-form-field-label" %>
          <%= f.collection_select :participant_ids, list_of_organisations, :id, :name, { }, { multiple: true, class: "mat-input-element select2-candidate" } %>
        </div>
      </div>
    </div>
  </div>



<% end %>
