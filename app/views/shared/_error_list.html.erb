
<% if errors.any? %>
  <% provide :error_list do %>
    <div id="error-list-ct" class="mat-card">
      <div class="mat-card-header">
        <h3 class="error-list-title mat-card-title">
          <span class="mat-badge mat-badge-warn mat-badge-above mat-badge-after mat-badge-medium">
            <%= t('ErrorWarn')%>
            <span class="mat-badge-content mat-badge-active"
              title="<%= pluralize(errors.count, t('error')) %>">
              <%= errors.count %>
            </span>
          </span>
        </h3>
      </div>

      <div class="mat-card-content">
        <ul id="error-list">
          <% errors.full_messages.each do |msg| %>
            <li>
              <span class="fa fa-exclamation-circle"></span>
              <%= msg %>
            </li>
          <% end %>
        </ul>
      </div>

    </div>
  <% end %>
<% end %>
