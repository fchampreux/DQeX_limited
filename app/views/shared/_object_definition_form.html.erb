<% smallTextarea ||= false %>
<% isTechnical ||= false %>
<div class="row mat-form-row">
  <div class="mat-form-field mat-form-field-required col-md-6">
    <%= f.label :code, isTechnical ? t('TechCode') : t('Code'), class: "mat-form-field-label" %>
    <%= f.text_field :code, class: "mat-input-element", autofocus: true %>
  </div>
  <div class="mat-form-field col-md-6">
    <%= yield :extra_attribute %>
  </div>
</div>

<%= render partial: "shared/translated_field_form", locals: {
  f: f,
  field: "name",
  fields: :name_translations,
  translations: this_object.name_translations,
  label: t('Name') } %>

<%= render partial: "shared/translated_field_form", locals: {
  f: f,
  field: "description",
  fields: :description_translations,
  translations: this_object.description_translations,
  isTextarea: true,
  smallTextarea: smallTextarea,
  label: t('Description') } %>
