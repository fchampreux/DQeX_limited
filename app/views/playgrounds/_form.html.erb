<% provide(:page_class, 'page-view-details') %>

<%= form_for @playground, html: {id: "edit_form"} do |f| %>

  <%= render partial: "shared/error_list", locals: { errors: @playground.errors } %>

  <div class="row mat-form-row">
    <div class="col-md-6">
      <%= render partial: "shared/object_definition_form", locals: {this_object: @playground, f: f } %>
    </div>

    <div class="col-md-6">
      <%= render partial: "shared/object_responsibilities_form", locals: {this_object: @playground, f: f} %>

      <div class="row mat-form-row">
        <div class="mat-form-field col-md-12">
          <%= f.label :logo, t('Logo'), class: "mat-form-field-label" %>
          <%= f.file_field :logo, class: "mat-input-element" %>
        </div>

      </div>
    </div>
  </div>
<% end %>
