<h2><%= t('AuthorisationData') %></h2>
<div class="row mat-form-row">
  <div class="mat-form-field col-md-3">
    <label for="user-roles" class="mat-form-field-label">
      <%= t('UserRoles') %>
    </label>
    <textarea id="user-roles" class="mat-input-element mat-textarea-md" readonly>
      <%= user_roles_list(@user) %>
    </textarea>
  </div>
  <div class="mat-form-field col-md-6">
    <label for="user-external-roles" class="mat-form-field-label">
      <%= t('ExternalRoles') %>
    </label>
    <textarea id="user-external-roles" class="mat-input-element" readonly>
      <%= @user.external_roles.map {|role| role}. join(', ') %>
    </textarea>
  </div>
</div>
<div class="row mat-form-row">
  <div class="mat-form-field col-md-12">
    <label for="user-activities" class="mat-form-field-label">
      <%= t('PreferredActivities') %>
    </label>
    <input id="user-activities" class="mat-input-element mat-textarea-md" readonly
      value="<%= @user.preferred_activities.map {|activity| activity}.join(', ') %>" />
  </div>
</div>
