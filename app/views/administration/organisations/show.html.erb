<% provide(:title, (t('ManagingOrgs'))) %>
<% provide(:page_class, 'page-view-details') %>

<% provide :page_heading do %>
  <%= render partial: "shared/heading", locals: {this_object: @organisation} %>
<% end %>

<% provide :breadcrumbs do %>
  <%= render partial: "shared/breadcrumbs" %>
<% end %>

<% provide :navigation do %>
  <%= render partial: "shared/show_view_navigation", locals: {this_object_parent: @organisation.ancestor, this_object_index: administration_organisations_path} %>
<% end %>

<% provide :actions do %>
  <%= render partial: "shared/object_actions", locals: {this_object: @organisation } %>
<% end %>

<% provide :technical_details do %>
  <%= render partial: "shared/object_ownership",
      locals: {this_object: @organisation} %>
<% end %>

<% provide :information do %>
  <div class="row">
    <div class="col-md-6">
      <%= render partial: "shared/object_definition", locals: {
          this_object: @organisation,
          smallTextarea: true,
          isTechnical: true} %>
    </div>
  </div>
<% end %>

<%= render layout: "layouts/collapsible_details",
    locals: {tabs_content: [ :information ],
    title: t('Organisation')}  do %>

<% end %>

<hr />

<section class="tabbable">

<ul class="nav nav-tabs" role="tablist">
  <li class="active"><a href="#business_areas" data-toggle="tab"><%= t('Organisations') %></a></li>
</ul>

<div class="tab-content">

  <div class="tab-pane active" id="business_areas">
    <%= link_to new_administration_organisation_organisation_path(@organisation), class: 'mat-flat-button mat-button-base mat-primary' do %>
      <span class="fa fa-file-alt" %></span>
      <%= t('NewOrg') %>
    <% end %>

    <%= render partial: "shared/child_object_index", locals: {this_child_index: @organisation.child_organisations} %>
  </div>

</div>
</section>
