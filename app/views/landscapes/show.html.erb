<% provide(:title, (t('ManagingLSs'))) %>
<% provide(:page_class, 'page-view-details') %>

<% provide :page_heading do %>
  <%= render partial: "shared/heading", locals: {this_object: @landscape} %>
<% end %>

<% provide :breadcrumbs do %>
  <%= render partial: "shared/breadcrumbs" %>
<% end %>

<% provide :navigation do %>
  <%= render partial: "shared/show_view_navigation", locals: {this_object_parent: @landscape.parent, this_object_index: landscapes_path} %>
<% end %>

<% provide :actions do %>
  <%= render partial: "shared/object_actions", locals: {this_object: @landscape } %>
<% end %>

<% provide :technical_details do %>
  <%= render partial: "shared/object_ownership", locals: {this_object: @landscape} %>
<% end %>

<% provide :information do %>
  <div class="row">
    <div class="col-md-6">
      <%= render partial: "shared/object_definition",
          locals: {this_object: @landscape,
                  smallTextarea: true,
                  isTechnical: true} %>
    </div>
    <div class="col-md-6">
      <%= render partial: "shared/object_responsibilities",
          locals: {this_object: @landscape,
                  showStatus: false} %>
    </div>
  </div>
<% end %>

<%= render layout: "layouts/collapsible_details",
    locals: {tabs_content: [ :information ],
    title: t('Landscape')}  do %>

<% end %>

<hr />

<section class="tabbable">

  <ul class="nav nav-tabs" role="tablist">
    <li class="active"><a href="#scopes" data-toggle="tab"><%= t('Scopes') %></a></li>
  </ul>

  <div class="tab-content">

    <div class="tab-pane active" id="scopes">
        <%= link_to new_landscape_scope_path(@landscape), class: 'mat-flat-button mat-button-base mat-primary' do %>
          <span class="fa fa-file-alt" %></span>
          <%= t('NewSc') %>
        <% end %>

      <%= render partial: "shared/child_object_index", locals: {this_child_index: @landscape.scopes} %>
    </div>

  </div>
</section>
