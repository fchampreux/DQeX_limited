<% provide(:title, (t('ManagingSkills'))) %>

<% provide :page_heading do %>
  <%= render partial: "shared/heading", locals: {this_object: @skill} %>
<% end %>

<% provide :breadcrumbs do %>
  <%= render partial: "shared/breadcrumbs" %>
<% end %>

<% provide :navigation do %>
  <%= render partial: "shared/edit_view_navigation" %>
<% end %>

<% provide :actions do %>
  <%= render partial: "shared/object_edit_actions", locals: {this_object: @skill } %>
<% end %>

<% provide :technical_details do %>
  <%= render partial: "shared/object_ownership", locals: {this_object: @skill} %>
<% end %>

<section id="collapsible-details-ct">
  <span id="modal-toggler"
        title="Technical details"
        data-toggle="modal"
        data-target="#technicalDetailsModal"
        class="switch-details fa fa-cog mat-icon-button mat-button-base"
        href="#technical-details">
  </span>
  <a id="collapsible-details-toggler"
     class="collapse-toggle mat-stroked-button mat-button-base"
     data-toggle="collapse"
     href="#collapsible-details">
    <%= t('Details') %>
  </a>

  <div class="collapse in" id="collapsible-details">

    <%= render 'form' %>

  </div>

  <!-- Child Modal window for technical details use -->
  <aside class="modal fades modal-remote" id="technicalDetailsModal" tabindex="-1" role="dialog" aria-labelledby="technicalDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="childModalLabel">
              <%= t('TechnicalDetails') %>
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= yield :technical_details %>
          </div>
      </div>
    </div>
  </aside>

</section>
